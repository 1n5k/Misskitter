<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="info.jnsk.www.misskitter.MainActivity">

    <EditText
            android:layout_width="279dp"
            android:layout_height="45dp"
            android:inputType="text|textPersonName"
            android:ems="10"
            android:id="@+id/noteText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="POST"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/createNote"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/user_icon" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="本文"
            android:layout_width="227dp"
            android:layout_height="30dp"
            android:id="@+id/text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/user_icon"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="username"
            android:layout_width="178dp"
            android:layout_height="16dp"
            android:id="@+id/username" app:layout_constraintStart_toEndOf="@+id/user_icon"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
</android.support.constraint.ConstraintLayout>
